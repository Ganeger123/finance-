# Django Backend Environment Configuration

# Core Django Settings
SECRET_KEY=your-secret-key-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,*.onrender.com

# Database (SQLite by default, can be changed)
# DATABASE_URL=sqlite:///db.sqlite3

# CORS Configuration
BACKEND_CORS_ORIGINS=
# Optional: Add additional allowed origins (comma-separated)
# BACKEND_CORS_ORIGINS=https://frontend-1.onrender.com,https://frontend-2.onrender.com

# Email Configuration (for alerts and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
EMAILS_FROM_EMAIL=your-email@gmail.com
