{
    "version": 2,
    "framework": "vite",
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    "env": {
        "VITE_API_URL": "https://panace-api.onrender.com/api"
    },
    "rewrites": [
        {
            "source": "/:path((?!api|_next|_static|public|favicon\\.ico|manifest\\.json|sw\\.js).*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=3600, s-maxage=3600"
                }
            ]
        },
        {
            "source": "/",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/html; charset=utf-8"
                }
            ]
        }
    ],
    "cleanUrls": true,
    "trailingSlash": false
}